<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesafioUseMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>


    <style name="title_name">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue_text</item>
    </style>

    <style name="title_details">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="description_details">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="description_rv">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_rv</item>
    </style>

</resources>